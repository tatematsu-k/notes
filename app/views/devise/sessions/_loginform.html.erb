<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if notice || alert %>
    <div id="error_explanation">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: true, class: 'form-control placeholder-no-fix' %>
  </div>

  <div class="form-group field">
    <%= f.password_field :password, autocomplete: 'off', placeholder: true, class: 'form-control placeholder-no-fix' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field white-text">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.submit "Log in", class: 'btn btn-success uppercase' %>
  </div>
<% end %>
