<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @note.title %>
</p>

<p>
  <strong>Tag:</strong>
  <% if @note.tags.length > 0 %>
    <% @note.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Content:</strong>
  <%= simple_format(@note.content) %>
</p>

<p>
  <strong>User:</strong>
  <%= @note.user.name %>
</p>

<%= link_to 'Edit', edit_note_path(@note) %> |
<%= link_to 'Back', notes_path %>
