<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<div class="card-deck card-box tag-card">
  <% @all_tags.each do |tag| %>
    <%= basic_card do -%>
      <%= card_header tag do -%>
        <%= tag.name %>
      <% end -%>
      <div class="list-group scroll-area">
        <% tag.notes.each do |note| %>
          <%= note_list_item note %>
        <% end %>
      </div>
    <% end -%>
  <% end %>
</div>

<div class="card-deck card-box">
  <% @all_notes.each do |note| %>
    <%= basic_card do -%>
      <%= card_header note do -%>
        <%= note.title %>
      <% end -%>
      <%= card_body do -%>
        <%= simple_format(note.content) %>
      <% end -%>
    <% end -%>
  <% end %>
</div>
